<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:background="@drawable/header">

    <include
        android:id="@+id/forgot_pass_toolbar"
        layout="@layout/app_bar_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide email and click the send button to receive a reset link"
        android:layout_below="@id/forgot_pass_toolbar"
        android:background="@color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:id="@+id/Txt_instructions_reset"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Txt_instructions_reset"
        android:id="@+id/Edt_email_reset"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:hint="Write your email address"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:padding="15dp"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edt_email_reset"
        android:id="@+id/send_password_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/background1"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#8C8B8B">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/profile_toolbar"/>

    <ScrollView
        android:layout_below="@id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/img"
                android:id="@+id/myProfile_pic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:id="@+id/myProfile_username"
                android:layout_below="@id/myProfile_pic"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full name"
                android:id="@+id/myProfile_fullname"
                android:layout_below="@id/myProfile_username"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:id="@+id/myProfile_gender"
                android:layout_below="@id/myProfile_fullname"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myProfile_description"
                android:layout_below="@id/myProfile_gender"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>